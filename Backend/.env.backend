# Where to read the wearer list
WEARERS_JSON=./config/Wearers.json
# Output folders (files will be {WEARER_ID}.csv inside each)
ACTIVITY_DIR=./data/ActivityMainChart
CALMNESS_DIR=./data/CalmnessMainChart
MOBILITY_DIR=./data/MobilityMainChart
CADENCE_DIR=./data/Cadence
PRV_DIR=./data/PulseRateVariability
SKIN_DIR=./data/SkinConductance

BOUTS_DIR=./data/Bouts
LONGEST_BOUTS_DIR=./data/LongestBout
PULSE_RATE_DIR=./data/PulseRate
SKIN_TEMPERATURE_DIR=./data/SkinTemperature
STEPS_DIR=./data/Steps
STEP_TIMES_VARIATION_DIR=./data/StepTimeVariation
SYMMETRY_DIR=./data/SymmetryProxy
TURNS=./data/Turns
WALKING__DIR=./data/Walking

DELETE_ON_REMOVAL=true
# optional safety first:
DRY_RUN=false
# How far back to guarantee (in days)
BACKFILL_DAYS=60

# Backfill resolution: "minute" (default) or "second"
# WARNING: "second" over 60 days = ~5.18 million rows per file.
BACKFILL_STEP=minute

# JSON polling interval (seconds)
WEARERS_POLL_SEC=15
